%body
  .single-containerl
    %header.single-headerl
      %h1
        = link_to root_path do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?594576510"
    %main.single-main
      .login-panel
        .login-no-account
          %p アカウントをお持ちでない方はこちら
          = link_to new_user_path do
            .new_btn
              新規会員登録
        .login-form-inner
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.fab.fa-facebook.fa-2x
              = link_to user_facebook_omniauth_authorize_path do
                .word-designation
                  Facebookでログイン
          %button#google-login.btn-default.btn-sns.btn-sns-google
            %i.fab.fa-google-plus-g.fa-2x
              = link_to user_google_oauth2_omniauth_authorize_path do
                .word-designation
                  Googleでログイン
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .login-form-inner
            .form-group
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "input-default"
            .form-group
              = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "input-default"
            .form-group
              = recaptcha_tags
            = f.submit "ログイン", class: "login-submit"
            = link_to "#", class: "pword" do
              パスワードをお忘れの方

      = render "users/footer.html.haml"
