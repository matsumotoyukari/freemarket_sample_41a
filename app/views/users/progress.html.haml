= render "products/header"
/ - breadcrumb :users_index
%nav.aaa
  = breadcrumbs separator: " > "

%main.l-container.clearfix
  .l-content
    %section.mypage-tab-container
      %h2.mypage-tab-head
        出品した商品
      %ul.mypage-tabs.exhibit
        %li.bold
          %h3
            = link_to "出品中", listings_users_path
        %li.bold.active
          %h3
            = link_to "取引中", progress_users_path
        %li.bold
          %h3
            = link_to "売却済み", completed_users_path
      .tab-content
        - if @products
          %ul#mypage-tab-transaction-now.active-item
            - @products.each do |product|
              -if product.rate.nil?
                %li
                  = link_to new_product_rate_path(product),class: "mypage-item-link" do
                    %figure
                      - if product.product_images.present?
                        = image_tag "#{product.product_images[0].image}",alt: "#{product.name}"
                        %figcaption.mypage-sold
                          .item-sold-out-badge
                            %div SOLD
                    .mypage-item-body
                      .mypage-item-text
                        = "「#{product.name}」を購入しました"
                        %br
                        受け取り評価をしてください
                      .mypage-item-status.bold.action-required
                        受取評価待ち
              - elsif product.rate.buyer_rate.nil?
                %li
                  = link_to edit_product_rate(product,product.rate),class: "mypage-item-link" do
                    %figure
                      - if product.product_images.present?
                        = image_tag "#{product.product_images[0].image}",alt: "#{product.name}"
                        %figcaption.mypage-sold
                          .item-sold-out-badge
                            %div SOLD
                    .mypage-item-body
                      .mypage-item-text
                        = "「#{product.name}」を購入しました"
                        %br
                        購入者に評価をしてください
                      .mypage-item-status.bold.action-required
                        取引評価待ち
              - elsif product.rate.seller_rate.nil?
                %li
                  = link_to product_path(product),class: "mypage-item-link" do
                    %figure
                      - if product.product_images.present?
                        = image_tag "#{product.product_images[0].image}",alt: "#{product.name}"
                        %figcaption.mypage-sold
                          .item-sold-out-badge
                            %div SOLD
                    .mypage-item-body
                      .mypage-item-text
                        = "「#{product.name}」を購入しました"
                        %br
                        出品者の評価を待っています
                      .mypage-item-status.bold.action-required
                        出品者の評価待ち
              - else
                %li.mypage-item-not-found.bold
                  取引中の商品がありません

        - else
          %ul#mypage-tab-transaction-now.mypage-item-list.tab-pane
            %li.mypage-item-not-found.bold
              取引中の商品がありません

  = render "sidebar"

= render "products/footer"



